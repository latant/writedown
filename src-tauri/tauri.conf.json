{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Writedown",
  "version": "0.1.0",
  "identifier": "dev.latinovits.writedown",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Writedown",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "role": "Editor",
        "description": "Markdown",
        "name": "Markdown",
        "ext": ["md", "markdown"],
        "mimeType": "text/markdown"
      }
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["file"]
      }
    }
  }
}
